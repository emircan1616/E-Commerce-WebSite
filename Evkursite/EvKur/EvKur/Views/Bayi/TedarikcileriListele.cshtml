@using EvKur.Models.Factory
@using EvKur.Models.Session
@model IEnumerable<EvKur.Models.Shop.Product>
@{
    ViewData["Title"] = "TedarikcileriListele";    
}




<div class="container">

     <h2 class="mb-4">Tedarikçilerin Elindeki Ürünler</h2>
     <hr /><br /><br />
     <form method="get">
<table class="table" id="myTable">
  <thead>
    <tr>      
      <th scope="col">Ad</th>
      <th scope="col">fiyat</th>
      <th scope="col">Adet</th>      
    </tr>
  </thead>
  <tbody>
                @foreach(var item in Model){
                    @if (item.UrunAdet > 0)
                    {
                        <tr>      
      <td hidden asp-for= "Id">@item.Id</td>
      <td asp-for= "Ad">@item.UrunAdi</td>
      <td asp-for= "UrunFiyat">@item.UrunFiyat</td>
      <td asp-for= "UrunAdet">@item.UrunAdet</td> 
      <td scope="row"><a asp-controller="Bayi" asp-action="BayiyeSiparisVer" asp-route-id="@item.Id"class="btn btn-secondary">Ürünü Sipariş et</a></td>
      </tr>
                    }

                        
                                           
      }
  </tbody>
</table>
</form>
</div>
